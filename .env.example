# Variables d'environnement pour la production
# Copier ce fichier en .env et remplir les valeurs

# Secret key pour Flask (générer une clé aléatoire longue)
SECRET_KEY=changez-cette-cle-en-production-avec-une-valeur-aleatoire

# Mode debug (False en production)
FLASK_DEBUG=False

# Port (laissez vide en production, le service cloud le définira)
PORT=5001

# Optionnel: Activer l'authentification
ENABLE_AUTH=False
AUTH_USERNAME=admin
AUTH_PASSWORD=changez-moi
